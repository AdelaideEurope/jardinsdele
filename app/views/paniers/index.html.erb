<%= render 'shared/navbar' %>
<div class="container mt-4 mb-4">
    <h2>Paniers de la <%= link_to vente_path(@vente) do %>vente de <%= @vente.vente_point.nom %> du <%= @vente.date.strftime("%d/%m") %><% end %></h2>
  <div class="box-recolter">
    <div>
      <%= image_tag "recolte.png", class: "recolte-img" %>
    </div>
    <div>
      <h2>À récolter</h2>
      <ul>
        <% @arecolter.each do |legume, detail| %>
        <li>
          <%= legume %> : <%= rem_trailing_zero(detail[:quantite]) %> <%= detail[:unite] != "kg" ? detail[:unite].pluralize : detail[:unite] %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<div class="container mt-4">
  <div class="tous-paniers-index">
    <div class="cadres-paniers">
      <% @paniers.sort_by(&:prix_ttc).first(3).each do |panier| %>
        <div class="cadre-paniers-pointvente">
          <div class="titre-cadre-paniers">
            <%= panier.prix_ttc.to_i %> € (<%= panier.quantite %> <%= panier.quantite > 1 ? "panier".pluralize : "panier" %>)
            <% if panier.valide == false && panier.vente.date >= Date.yesterday %>
              <%= link_to edit_vente_panier_path(@vente, panier) do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>
            <% end %>
          </div>
            <% if panier.engagement == true %>
              <%= image_tag "panier_engagement.png", class: "panier-engagement" %>
            <% end %>
          <div class="detail-paniers">
            <ul>
              <% panier.panier_lignes.sort_by(&:created_at).each do |ligne| %>
                <li>
                  <% if panier.valide == false && panier.vente.date >= Date.yesterday %>
                    <div class="panier-nom-legume">
                      <%= ligne.legume.nom %>
                    </div>
                    <div class="wrapper-paniers-index">
                      <div class="panier-quantite-legume">
                        <%= rem_trailing_zero(ligne.quantite) %>
                        <% if ligne.unite.nil? || ligne.unite == "" %>
                          <%= ligne.quantite > 1 && ligne.legume.unite != "kg" ? ligne.legume.unite.pluralize : ligne.legume.unite %>
                        <% else %>
                          <%= ligne.quantite > 1 && ligne.unite != "kg" ? ligne.unite.pluralize : ligne.unite %>
                        <% end %>
                      </div>
                      <div class="panier-prix-legume">
                        <%= number_with_precision(ligne.prixunitairettc, precision: 2) %> €
                      </div>
                        <div>
                          <%= link_to vente_panier_panier_ligne_path(@vente, panier, ligne), method: :delete, data: { confirm: "Supprimer ?" } do %>
                            <i class="fas fa-trash"></i>
                          <% end %>
                        </div>
                        <div>
                          <%= link_to edit_vente_panier_panier_ligne_path(@vente, panier, ligne) do %>
                            <i class="fas fa-pencil-alt"></i>
                          <% end %>
                        </div>
                    </div>
                  <% else %>
                    <div class="panier-nom-legume">
                      <%= ligne.legume.nom %>
                    </div>
                    <div class="panier-valide-index">
                      <div class="panier-quantite-legume">
                        <%= rem_trailing_zero(ligne.quantite) %>
                        <% if ligne.unite.nil? || ligne.unite == "" %>
                          <%= ligne.quantite > 1 && ligne.legume.unite != "kg" ? ligne.legume.unite.pluralize : ligne.legume.unite %>
                        <% else %>
                          <%= ligne.quantite > 1 && ligne.legume.unite != "kg" ? ligne.unite.pluralize : ligne.unite %>
                        <% end %>
                      </div>
                      <div class="panier-prix-legume">
                        <%= number_with_precision(ligne.prixunitairettc, precision: 2) %> €
                      </div>
                    </div>
                  <% end %>
                </li>
              <% end %>
            </ul>
            <% if panier.valide == false && panier.vente.date >= Date.yesterday %>
              <div class="add-ligne">
                <%= link_to new_vente_panier_panier_ligne_path(@vente, panier) do %>
                  <% image_tag "plus-rond.png", class: "plus-rond-ligne" %>
                <% end %>
              </div>
            <% end %>
            <ul>
              <li>
                <div>
                </div>
                <div class="total-panier">
                  <div class="panier-quantite-legume">
                    Total :
                  </div>
                  <div class="panier-prix-legume">
                    <%= number_with_precision(panier.prix_reel_ttc, precision: 2) || 0.00 %> €
                  </div>
                </div>
              </li>
              <li>
                <div></div>
                <div class="ecart-panier">
                  <div class="panier-quantite-legume">Écart :</div>
                  <% if (panier.prix_reel_ttc || 0.00) - panier.prix_ttc < 0 %>
                    <div class="panier-prix-legume text-danger"><%= number_with_precision((panier.prix_reel_ttc || 0.00) - panier.prix_ttc, precision: 2) %> €</div>
                  <% else %>
                    <div class="panier-prix-legume text-success"><%= number_with_precision((panier.prix_reel_ttc || 0.00) - panier.prix_ttc, precision: 2) %> €</div>
                  <% end %>
                </div>
              </li>
              <% if panier.valide == false && panier.vente.date >= Date.yesterday && panier.engagement == true %>
