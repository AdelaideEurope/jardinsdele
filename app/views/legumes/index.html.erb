            <div><b>Légume</b></div>
            <div><b><%= link_to planches_path do %><%= image_tag "planches.png", class: "titre-planches-index-leg" %><% end %></b></div>
            <div class="pl-2"><b>CA</b></div>
            <div><b>% CA</b></div>
          </div>
        </li>

        <% @tous_legumes_parlegume[0...@firsthalf].each do |legume| %>
          <li>
            <div class="wrapper-legumes">
              <div><%= link_to legume_path(legume[:legume_css]) do %> <%= legume[:nom] %> <% end %> </div>
