      <div class="titre-legumes"><h2>Les légumes</h2>
        <% h = Hash.new { |h,k| h[k] = "".to_i } %>
      <%= link_to legumes_path do %>
      <div class="voir-tout-recap-legumes">Voir tout</div><% end %></div>
      <ul class=sample-legumes>
      <% @legumes.sample(3).each do |legume| %>
      <% duree = [] %>
