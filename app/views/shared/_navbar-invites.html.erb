<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to 'http://lesjardinsdele.fr/', :target => "_blank", class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? && current_user.admin? %>
        <li class="nav-item <%= 'active' if current_page?(activites_recap_path) || current_page?(activites_path) %>">
          <%= link_to "Temps de travail", activites_recap_path, class: "nav-link with-border" %>
        </li>
        <li class="nav-item <%= 'active' if current_page?(legumes_recap_path) || current_page?(legumes_path) %>">
          <%= link_to "Cultures", legumes_recap_path, class: "nav-link with-border" %>
        </li>
        <li class="nav-item <%= 'active' if current_page?(ventes_recap_path) || current_page?(ventes_path) %>">
          <%= link_to "Ventes", ventes_recap_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "ele.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% elsif user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "ele.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
